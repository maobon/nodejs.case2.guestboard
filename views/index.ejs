<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>NodeJS 留言板</title>
    <style>
        .comment-list {
            overflow-x: auto;
            height: 400px;
            border: 1px solid #ccc;
            border-radius: 10px;
        }
    </style>
</head>

<body>
<h1>留言板</h1>
<div class="container">
    <!-- 消息列表 -->
    <ul class="comment-list">
    </ul>

    <div>
        <!-- form 表单 -->
        <form id="form" method="post" action="/comments">
            <!-- textarea name="message" -->
            <textarea name="message" id="message" cols="150" rows="3" required maxlength="150"></textarea>
            <!-- submit button -->
            <input type="submit" value="发送">
        </form>
    </div>
</div>

<!-- 资源引用写为绝对路径 -->
<script src="/node_modules/jquery/dist/jquery.min.js"></script>
<script src="/node_modules/art-template/dist/template.js"></script>

<!-- template -->
<script type="text/template" id="templateId">
    {{ each list }}
    <li><span class="ip">{{ $value.ip }}</span>说：<span class="message">{{ $value.message }}</span></li>
    {{ /each }}
</script>

<script>
    $(function () {

        queryAllMessage();

        setInterval(queryAllMessage, 2000);

        function queryAllMessage() {
            $.ajax({
                url: '/query',
                type: 'get',
                dataType: 'json'

            }).then(function (data) {
                var strHTML = template('templateId', {list: data.result});
                $(".comment-list").html(strHTML);

            }).catch(function (err) {
                console.log('查询消息列表异常');
            })
        }

        function sendCommit() {
            $.ajax({
                type: 'post',
                url: '/submit',
                data: $("#form").serialize(),
                dataType: 'json'

            }).then(function (data) {
                if (data.err_code === 0) {
                    $("#message").val('');
                }
                localeData();

            }).catch(function (err) {
                console.log('聊天信息提交出错');
            })
        }


        $(window).on('keyup', function (e) {
            if (e.keyCode === 13) {
                sendCommit();
            }
        })

        $("#form").on('submit', function (e) {
            e.preventDefault();
            sendCommit();
        });
    });
</script>

</body>
</html>

